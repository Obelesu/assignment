#include<stdio.h>

int main() {
    // Declare and define an integer array with 5 elements
    int arr[] = {5, 10, 15, 20, 25};

    // Declare a pointer variable and initialize it to the address of the first element of the array
    int *ptr = &arr[0];

    // Use a loop to print the array elements using pointer arithmetic
    for (int i = 0; i < 5; i++) {
        printf("%d ", *(ptr + i));
    }

    return 0;
}
output
0, 2, 1
